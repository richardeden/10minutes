<h1>Editing devotion</h1>

<% form_for(@devotion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :verse %><br />
    <%= f.text_field :verse %>
  </p>
  <p>
    <%= f.label :thought %><br />
    <%= f.text_area :thought %>
  </p>
  <p>
    <%= f.label :prayer %><br />
    <%= f.text_area :prayer %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @devotion %> |
<%= link_to 'Back', devotions_path %>
